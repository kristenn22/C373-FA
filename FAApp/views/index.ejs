        }

        .benefits-grid {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 20px;
            margin-top: 20px;
        }

        .benefit-item {
            background: #f5f5f5;
            padding: 20px;
            border-radius: 8px;
            line-height: 1.6;
        }

        .benefit-item strong {
            color: #000;
        }

        @media (max-width: 768px) {
            .hero-title {
                font-size: 36px;
            }

            .products-grid {
                grid-template-columns: 1fr;
            }

            .sidebar {
                display: none;
            }

            .benefits-grid {
                grid-template-columns: 1fr;
            }

            .modal-content {
                margin: 20px;
                padding: 20px;
            }
        }

        /* Buy Modal Styles */
        .buy-modal {
            display: none;
            position: fixed;
            z-index: 1000;
            left: 0;
            top: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.5);
        }

        .buy-modal.show {
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .buy-modal-content {
            background-color: white;
            padding: 40px;
            border-radius: 12px;
            text-align: center;
            max-width: 400px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.2);
            animation: slideIn 0.3s ease-out;
        }

        @keyframes slideIn {
            from {
                transform: translateY(-50px);
                opacity: 0;
            }
            to {
                transform: translateY(0);
                opacity: 1;
            }
        }

        .buy-modal-content h2 {
            font-size: 24px;
            margin-bottom: 20px;
            color: #000;
        }

        .buy-modal-content p {
            color: #666;
            margin-bottom: 30px;
            font-size: 14px;
        }

        .buy-modal-buttons {
            display: flex;
            gap: 15px;
            flex-direction: column;
        }

        .buy-modal-btn {
            padding: 12px 24px;
