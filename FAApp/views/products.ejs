<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-sm navbar-custom">
        <div class="container-fluid">
            <img src="/images/petshop.png" width="100" height="100" alt="Pet Shop Logo" />
            <a class="navbar-brand" href="/">Pete's Pet Shop</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="collapsibleNavbar">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="/addPet">Add a Pet</a>
                    </li>
                </ul>
            </div>
            <span class="navbar-brand mb-0 h1">Account: <%= acct %></span>
        </div>
    </nav>
    <div class="form-container">
      <br>
      <div class="form-title text-center"><h2>Add Training info  </h2></div>
      <div class="form-title text-center"><h2>Of Pet id    <%= petId %>   </h2></div>
    
      <br>
      <div class="text-center">
          <form action="/addTraining" method="POST" >
            <div class="form-group">
                <label for="trainingType" class="form-label">Training Type </label>
                <input type="text" class="form-control" id="trainingType" name="trainingType" required
                       placeholder="Enter Training type ">
            </div>

            <div class="form-group">
                <label for="trainingDate" class="form-label">Date of Training</label>
                <input type="date" class="form-control" id="trainingDate" name="trainingDate" required>
            </div>

            <div class="form-group">
                <label for="progress" class="form-label">Progress of the Training </label>
                <input type="text" class="form-control" id="progress" name="progress" required
                       placeholder="Enter the progress of the training">
            </div>

            <div class="form-group">
                <label for="name" class="form-label">Trainer's  Name</label>
                <input type="text" class="form-control" id="name" name="name" required
                       placeholder="Enter Trainer's name">
            </div>

            <div class="form-group">
                <label for="org" class="form-label">Organization</label>
                <input type="text" class="form-control" id="org" name="org" required
                       placeholder="Enter Organization's name">
            </div>

            <div class="form-group">
                <label for="contact" class="form-label">Contact Number</label>
                <input type="tel" class="form-control" id="contact" name="contact" required
                       pattern="[0-9]{8}" placeholder="Enter 8-digit contact number">
            </div>

            <input type="hidden"  id="petId" name="petId" value = "<%= petId %>" />
       
            <button type="submit">Add Training</button>
          </form>
      </div>
  </div>
</body>
