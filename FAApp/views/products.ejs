        <div class="product-meta">
            <span>Listed by @user123</span>
            <span>1 week ago</span>
        </div>

        <div class="product-actions">
            <a href="/buy" class="btn btn-primary">Buy</a>
            <button class="btn btn-secondary">Chat</button>
        </div>
    </div>
